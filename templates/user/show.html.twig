{% extends 'base.html.twig' %}

{% block title %}{{ site_name_full }} : profil de {{ app.user.prenom }} {{ app.user.nom }}{% endblock %}

{% block body %}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <h2>Administration du site</h2>
        </div>
    </section>
    <!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">
            <div class="row d-flex justify-content-center">
 
                {% if app.user %}
                    {% if (app.user.id == user.id) or (is_granted('ROLE_ADMIN')) %}

                        <div class="col-sm-2">
                            {% if user.image %}
                                <img src="../uploads/images/users/{{ user.image }}" class="img-fluid" style="max-width:150px; width:100%;" alt="{{ user.prenom }} {{ user.nom }}">
                            {% else %}
                                <img src="../uploads/images/users/no-image.png" class="img-fluid" alt="{{ user.prenom }} {{ user.nom }}">
                            {% endif %}
                        </div>
                        <div class="col-sm">
                            <table width="100%">
                                <tr>
                                    <th width="20%">Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Prenom</th>
                                    <td>{{ user.prenom }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ user.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Roles</th>
                                    {% if user.roles|json_encode == '["ROLE_USER"]' %}
                                    <td><span class="text-primary fw-bold">Utilisateur</span></td>
                                    {% else %}
                                    <td><span class="text-danger fw-bold">Admin</span></td>
                                    {% endif %}
                                </tr>
                                    <tr>
                                        <th>Présentation</th>
                                        {% if user.presentation %}
                                            <td class="bg-light rounded p-2">{{ user.presentation|raw }}</td>
                                        {% endif %}
                                    </tr>
                                <tr>
                                    <th>Fonctions</th>
                                    <td>{{ user.fonction }}</td>
                                </tr>
                                <tr>
                                    <th>Compte vérifié</th>
                                    <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                                </tr>
                            </table>

                            <table width="100%" class="mt-5">
                                <tr>
                                    <td>
                                        <a class="btn btn-sm btn-success" href="{{ path('user_edit', {'id': user.id}) }}">Modifier mon profil</a> 
                                        <button class="btn btn-sm btn-secondary" type="reset">Annuler</button>
                                    </td>
                                    <td align="right">{{ include('user/_delete_form.html.twig') }}</td>
                                </tr>
                            </table>
                        </div>
                    
                    {% else %}

                    <div class="col mt-4 pt-4 pb-2 px-3 alert alert-danger text-center">
                        <p>
                            <i class="bi bi-exclamation-triangle-fill h1 fw-bold"></i>
                        </p>
                        <p>
                            Vous ne pouvez pas accéder à cette page !
                        </p>
                        <p>
                            <a class="btn btn-primary2" href="{{ path('home') }}"><i class="fas fa-home"></i> Retourner à l'accueil</a>
                        </p>
                    </div>
                    {% endif %}

                {% else %}
                    <div class="col pt-4 pb-2 px-3 alert alert-danger text-center">
                        <p>
                            <i class="bi bi-exclamation-triangle-fill h1 fw-bold"></i>
                        </p>
                        <p>
                            Vous ne pouvez pas accéder à cette page !
                        </p>
                        <p>
                            <a class="btn btn-primary2" href="{{ path('home') }}"><i class="fas fa-home"></i> Retourner à l'accueil</a>
                        </p>
                    </div>
                {% endif %}

                    {#
                    <h4 class="bg-dark text-white rounded p-2 my-4 text-center">
                        /!\ : vérifier si le visiteur à la droit de voir cette page : soit c'est l'admin, soit c'est le compte du visiteur.
                    </h4>
                    <h2>Profil de : {{ app.user.prenom }} {{ app.user.nom }}</h2>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>Prenom</th>
                                <td>{{ user.prenom }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ user.nom }}</td>
                            </tr>
                            <tr>
                                <th>Roles</th>
                                {% if user.roles|json_encode == '["ROLE_USER"]' %}
                                <td><span class="text-primary fw-bold">Utilisateur</span></td>
                                {% else %}
                                <td><span class="text-danger fw-bold">Admin</span></td>
                                {% endif %}
                            </tr>
                            <tr>
                                <th>Présentation</th>
                                <td>{{ user.presentation|raw }}</td>
                            </tr>
                            <tr>
                                <th>Fonctions au Centre Social</th>
                                <td>{{ user.fonction }}</td>
                            </tr>
                            <tr>
                                <th>Image de profil</th>
                                <td><img src="../uploads/images/users/{{ user.image }}" class="img-fluid" style="max-width:100px; width:100%;" alt="{{ user.prenom }}"</td>
                            </tr>
                            <tr>
                                <th>Compte vérifié</th>
                                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <table width="100%">
                        <tr>
                            <td>
                                <a class="btn btn-sm btn-success" href="{{ path('user_edit', {'id': user.id}) }}">Modifier mon profil</a> 
                                <button class="btn btn-sm btn-secondary" type="reset">Annuler</button>
                            </td>
                            <td align="right">{{ include('user/_delete_form.html.twig') }}</td>
                        </tr>
                    </table>
                    #}

                </div>
            </div>
        </div>
    </section>
</main>

{% endblock %}