{% extends 'base.html.twig' %}

{% block title %}{{ site_name_full }} : modification du profil de {{ app.user.prenom }} {{ app.user.nom }}{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <h2>Administration du site</h2>
        </div>
    </section>
    <!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">
            <div class="row d-flex justify-content-center">

                {% if app.user %}
                    {% if (app.user.id == user.id) or (is_granted('ROLE_ADMIN')) %}
                        <div class="col">
                            <h2>Modification du profil : {{ user.prenom }} {{ user.nom }}</h2>

                            {{ include('user/_form.html.twig', {'button_label': 'Modifier l\'utilisateur'}) }}
                            <p>
                                {{ include('user/_delete_form.html.twig') }}
                            </p>
                        </div>
                    {% else %}
                        <div class="col mt-4 pt-4 pb-2 px-3 alert alert-danger text-center">
                            <p>
                                <i class="bi bi-exclamation-triangle-fill h1 fw-bold"></i>
                            </p>
                            <p>
                                Vous ne pouvez pas accéder à cette page !
                            </p>
                            <p>
                                <a class="btn btn-primary2" href="{{ path('home') }}"><i class="fas fa-home"></i> Retourner à l'accueil</a>
                            </p>
                        </div>
                    {% endif %}

                    {% else %}
                    <div class="col pt-4 pb-2 px-3 alert alert-danger text-center">
                        <p>
                            <i class="bi bi-exclamation-triangle-fill h1 fw-bold"></i>
                        </p>
                        <p>
                            Vous ne pouvez pas accéder à cette page !
                        </p>
                        <p>
                            <a class="btn btn-primary2" href="{{ path('home') }}"><i class="fas fa-home"></i> Retourner à l'accueil</a>
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
</main>
{% endblock %}