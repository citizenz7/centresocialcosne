{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <section class="breadcrumbs">
            <div class="container">
                <h2>Administration du site</h2>
            </div>
        </section>
        <!-- End Breadcrumbs -->

        <section class="inner-page">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col mt-4 alert-danger py-5 px-3 text-center">
                        <h1 class="display-1 font-weight-bold">
                            ERREUR {{ status_code }}
                        </h1>
                        <h1 class="display-4 mb-5">{{ status_text }}</h1>
                        <h3>Oops! Il y a une erreur</h3>
                        Vous devriez cliquer sur le bouton ci-dessous
                    </div>
                    <div class="mt-3 text-center">
                        <a class="btn btn-primary p-3 lead" href="{{ path('home') }}">
                            Retour sur la page d'accueil
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}