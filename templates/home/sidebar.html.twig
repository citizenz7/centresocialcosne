<!-- Sidebar -->
<div class="col-lg-4">

    <div class="sidebar">

        <h3 class="sidebar-title"><i class="bi bi-search"></i> Recherche</h3>
        <div class="sidebar-item categories">
            <ul>
                <li><a href="{{ path('recherche_article') }}"><i class="bi bi-arrow-right-short"></i> Rechercher un article</a></li>
                <li><a href="{{ path('recherche_activite') }}"><i class="bi bi-arrow-right-short"></i> Rechercher une activité</a></li>
                <li><a href="{{ path('recherche_page') }}"><i class="bi bi-arrow-right-short"></i> Rechercher une page</a></li>
            </ul>
        </div><!-- End sidebar search formn-->

        <h3 class="sidebar-title"><i class="bi bi-tag-fill"></i> Catégories</h3>
        <div class="sidebar-item categories">
            <ul>
                {% for cat in categories %}
                    <li>
                        <a href="{{ path('categorie_show', {'slug': cat.slug}) }}">
                            <i class="bi bi-arrow-right-short"></i> {{ cat.titre }} 
                        </a>
                    </li>
                {% endfor %}

            </ul>
        </div><!-- End sidebar categories-->

        <h3 class="sidebar-title"><i class="bi bi-card-text"></i> Articles populaires</h3>
        <div class="sidebar-item categories">
            <ul class="list-group list-group-flush">
                {% for a in articles %}
                        <li class="list-group-item" style="text-align:justify;">
                            <img src="../uploads/images/articles/{{ a.image }}" alt="{{ a.titre }}" class="img-fluid me-2 mt-2 float-start rounded" style="max-width:70px; width:100%;">
                                <span class="badge border text-primary" style="font-size:9px;">{{ a.createdAt|date('d-m-Y') }}</span>
                            <a class="small" href="{{ path('article_show', {'slug': a.slug}) }}">
                                {{ a.titre }} 
                            </a>
                            <span class="badge border mx-1 px-2 pb-1 text-dark" style="font-size:9px;" title="Nb de lectures">{{ a.views }}</span>
                        </li>

                {% endfor %}

            </ul>
        </div><!-- End sidebar categories-->

        <h3 class="sidebar-title"><i class="bi bi-newspaper"></i> Blog</h3>
        <div class="sidebar-item categories">
            <ul>
                <li>
                    Lectures totales : 
                    <span class="badge bg-secondary">
                            {% for view in views %}
                                    {{ view.totalViews | number_format(0, '', ' ') }}
                            {% endfor %}
                    </span>
                </li>
            </ul>
        </div>

    </div><!-- End sidebar -->

</div>
<!-- End blog sidebar -->