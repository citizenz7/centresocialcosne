{% extends 'base.html.twig' %}

{% block title %}Bienvenue au {{ site_name_full }}{% endblock %}

{% block body %}

{% for page in pages %}
    {% if page.isFeatured %}
        <!-- ======= Hero Section ======= -->
        <section id="hero" class="hero d-flex align-items-center">

            <div class="container">
                <div class="row">
                    <div class="col-lg-6 d-flex flex-column justify-content-center">
                        <h1 data-aos="fade-up">{{ page.titre }}</h1>
                        <h2 data-aos="fade-up" data-aos-delay="400">
                            {{ page.contenu|raw }}
                        </h2>
                        <div data-aos="fade-up" data-aos-delay="600">
                            <div class="text-center text-lg-start">
                                <a href="{{ path('home') }}#services"
                                    class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center">
                                    <span>Découvrir</span>
                                    <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 hero-img" data-aos="zoom-out" data-aos-delay="200">
                        <img src="{{ asset('img/hero-img.png') }}" class="img-fluid rounded-pill" alt="">
                    </div>
                </div>
            </div>

        </section><!-- End Hero -->
    {% endif %}
{% endfor %}

<main id="main">

    {% for page in pages %}
        {% if page.isAbout %}
            <!-- ======= About Section ======= -->
            <section id="about" class="about">

                <div class="container" data-aos="fade-up">
                
                    <div class="row gx-0">
                        <div class="col-lg-6 d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="200">
                            <div class="content">
                                <h2>{{ page.titre }}</h2>
                                <p>
                                    {{ page.contenu|slice(0,575)|raw }}...
                                </p>
                                <div class="text-center text-lg-start">
                                    <a href="{{ path('page_show', {'slug': page.slug}) }}"
                                        class="btn-read-more d-inline-flex align-items-center justify-content-center align-self-center">
                                        <span>Lire la suite</span>
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 d-flex align-items-center" data-aos="zoom-out" data-aos-delay="200">
                            <img src="{{ asset('img/about.jpg') }}" class="img-fluid" alt="{{ page.titre }}">
                        </div>

                    </div>
                </div>

            </section>
            <!-- End About Section -->
        {% endif %}
    {% endfor %}

    {% for tp in totalPages %}
        {% if tp.isInscription %}
            <!-- ======= Adhérer au centre social ======= -->
            <span id="adhesion" class="pt-5"></span>
            <section class="adhesion">
                <div class="container" data-aos="fade-up">
                    <div class="row gx-0 justify-content-center">

                        <div class="col-lg-12" data-aos="fade-up" data-aos-delay="200">
                            <header class="section-header">
                                <p>{{ tp.titre }}</p>
                            </header>
                            <div class="content">
                                {{ tp.contenu|slice(0,750)|raw }}...
                            </div>
                            <a href="{{ path('page_show', {'slug': tp.slug}) }}" class="btn-read-more d-inline-flex align-items-center justify-content-center align-self-center">
                                <span>Tarifs et bulletins d'inscription et d'adhésion</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}
    {% endfor %}


    <!-- ======= Activités et services Section ======= -->
    <section id="services" class="activites">

        <div class="container" data-aos="fade-up">

            <header class="section-header">
                <h2>Les activités et les services du {{ site_name_full }}</h2>
                <p>Une trentaines de services et d'activités pour tous !</p>
            </header>

            <div class="row">
                {% for activite in activites %}
                    <div class="col-lg-4">
                        <div class="box" data-aos="fade-up" data-aos-delay="200">
                            <img src="../uploads/images/activites/{{ activite.image }}" class="img-fluid" alt="{{ activite.titre }}">
                            <h6>
                                {% for cat in activite.categorie %}
                                    {{ cat.titre }}
                                {% endfor %}
                            </h6>
                            <h3>
                                <a href="{{ path('activite_show', {'slug': activite.slug}) }}">
                                    {{ activite.titre }}
                                </a>
                            </h3>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="row mt-3">
                <div class="col">
                    <div class="box" data-aos="fade-up" data-aos-delay="200">
                        <a href="{{ path('activite_index') }}" class="btn-read-more d-inline-flex align-items-center justify-content-center align-self-center">
                            <span>Voir toutes les activités et les services</span>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    
    </section>
    <!-- End activités & services Section -->

    <!-- ======= Recent Blog Posts Section ======= -->
    <section id="recent-blog-posts" class="recent-blog-posts">

        <div class="container" data-aos="fade-up">

            <header class="section-header">
                <h2>Blog</h2>
                <p>Les dernières infos du Centre Social</p>
            </header>

            <div class="row">

                {% for article in articles %}
                    <div class="col-lg-4">
                        <div class="post-box">
                            <div class="post-img">
                                <img src="../uploads/images/articles/{{ article.image }}" class="img-fluid" alt="{{ article.titre }}">
                            </div>
                            <span class="post-date">
                                Posté le {{ article.createdAt ? article.createdAt|date('d-m-Y') : '' }}, 
                                par {{ article.auteur }}
                                <br>
                                {% for cat in article.categorie %}
                                    <a href="{{ path('categorie_show', {'slug': cat.slug}) }}">{{ cat.titre }}</a>
                                {% endfor %}
                            </span>

                            <h3 class="post-title">{{ article.titre }}</h3>
                            <a href="{{ path('article_show', {'slug': article.slug}) }}" class="btn btn-sm btn-dark">
                                Lire l'article
                            </a>
                        </div>
                    </div>
                {% endfor %}

            </div>

            <div class="row mt-3">
                <div class="col">
                    <div class="post-box text-center" data-aos="fade-up" data-aos-delay="200">
                        <a href="{{ path('article_index') }}" class="btn-read-more d-inline-flex align-items-center justify-content-center align-self-center">
                            <span>Voir tous les articles : Blog</span>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </section><!-- End Recent Blog Posts Section -->

    <!-- ======= Pages Section ======= -->
    <section id="pages" class="pages">

        <div class="container" data-aos="fade-up">

            <header class="section-header">
                <h2>Tout le Centre Social et Culturel</h2>
                <p class="text-white">Le Centre Social est une maison, une grande ruche vivante, ...</p>
            </header>

            <div class="row">
                {% for page in pages %}
                    <div class="col-lg-4">
                        <div class="box" data-aos="fade-up" data-aos-delay="200">
                            <h2 class="bi bi-building"></h2>
                            <a href="{{ path('page_show', {'slug': page.slug}) }}">{{ page.titre }}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>


            <div class="row mt-3">
                <div class="col">
                    <div class="box text-center" data-aos="fade-up" data-aos-delay="200">
                        {#
                        <a class="fw-bold h4" href="{{ path('page_index') }}"><i class="bi bi-arrow-down-right-square" style="font-size:1.5rem;"></i> Voir toutes les pages</a>
                        #}
                        <a href="{{ path('page_index') }}" class="btn-read-more d-inline-flex align-items-center justify-content-center align-self-center">
                            <span>Découvrir le {{ site_name_full }}</span>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </section><!-- End Values Section -->

    <!-- ======= Counts Section ======= -->
    <section id="counts" class="counts">
        <div class="container" data-aos="fade-up">

            <div class="row gy-4">

                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-emoji-smile"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="650" data-purecounter-duration="1"
                                class="purecounter"></span>
                            <p>Adhérents "familles"</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-people-fill" style="color: #ee6c20;"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="1250" data-purecounter-duration="1"
                                class="purecounter"></span>
                            <p>Participants</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-palette" style="color: #15be56;"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="1023" data-purecounter-duration="1"
                                class="purecounter"></span>
                            <p>Heures d'activité</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-people" style="color: #bb0852;"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="19" data-purecounter-duration="1"
                                class="purecounter"></span>
                            <p>salariés</p>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Counts Section -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">

        <div class="container" data-aos="fade-up">

            <header class="section-header">
                <h2>Contact</h2>
                <p>Nous contacter</p>
            </header>

            <div class="row gy-4">

                <div class="col-lg-6">

                    <div class="row gy-4">
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bi bi-geo-alt"></i>
                                <h3>Adresse</h3>
                                <p>15, rue de Berry<br>58200 Cosne-Cours-sur-Loire</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bi bi-clock"></i>
                                <h3>Horaires d'ouverture</h3>
                                <p>Du lundi au vendredi<br>08:30-12:00 / 13:30-17:30</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bi bi-envelope"></i>
                                <h3>E-mail</h3>
                                <p>info@centresocialcosne.org</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bi bi-telephone"></i>
                                <h3>Téléphone</h3>
                                <p>03.86.28.20.96</p>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-6">
                    <form action="forms/contact.php" method="post" class="php-email-form">
                        <div class="row gy-4">

                            <div class="col-md-6">
                                <input type="text" name="name" class="form-control" placeholder="Votre nom" required>
                            </div>

                            <div class="col-md-6 ">
                                <input type="email" class="form-control" name="email" placeholder="Votre e-mail"
                                    required>
                            </div>

                            <div class="col-md-12">
                                <input type="text" class="form-control" name="subject" placeholder="Sujet" required>
                            </div>

                            <div class="col-md-12">
                                <textarea class="form-control" name="message" rows="6" placeholder="Message"
                                    required></textarea>
                            </div>

                            <div class="col-md-12 text-center">
                                <div class="loading">Chargement...</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Votre message a été envoyé. Merci !</div>

                                <button type="submit">Envoyer le message</button>
                            </div>

                        </div>
                    </form>

                </div>

            </div>

        </div>

    </section><!-- End Contact Section -->

</main><!-- End #main -->

{% endblock %}