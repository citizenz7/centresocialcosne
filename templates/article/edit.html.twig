{% extends 'base.html.twig' %}

{% block title %}{{ site_name_full }} : modification de {{ article.titre }}{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <h2>Administration du site</h2>
        </div>
    </section>
    <!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col">
                    <h2>Modifier l'article</h2>

                    {{ include('article/_form.html.twig', {'button_label': 'Modifier l\'article'}) }}

                    {{ include('article/_delete_form.html.twig') }}

                    <a class="btn btn-sm btn-primary" href="{{ path('article_index') }}">Liste des articles</a>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}