{{ form_start(form) }}
    {#{ form_widget(form) }#}
    {{ form_row(form.titre) }}
    <div class="mb-3">
        {{ form_row(form.contenu) }}
    </div>

    <div class="border border-success rounded p-2 mb-3">
        {{ form_row(form.image) }}
    </div>

    <div class="border border-primary rounded p-2 mb-3">
        {{ form_row(form.file1) }}
        {{ form_row(form.file2) }}
        {{ form_row(form.file3) }}
