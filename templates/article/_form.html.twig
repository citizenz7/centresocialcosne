    {{ form_row(form.categorie) }}
    {{ form_row(form.is_active) }}

    <div class="mt-3">
        <button class="btn btn-sm btn-success">{{ button_label|default('Cr√©er un article') }}</button>
        <button class="btn btn-sm btn-secondary"type="reset">Annuler</button> 
        <a class="btn btn-sm btn-primary" href="{{ path('article_admin_index') }}">Liste des articles</a>
    </div>
