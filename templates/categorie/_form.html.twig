{{ form_start(form) }}
    {#{ form_widget(form) }#}

    {{ form_row(form.titre) }}
    <div class="mb-3">
        {{ form_row(form.description) }}
    </div>

    <div class="border border-success rounded p-2 mb-3">
        {{ form_row(form.image) }}
    </div>

    <div class="mt-3">
        <button class="btn btn-sm btn-success">{{ button_label|default('Créer une catégorie') }}</button>
        <button class="btn btn-sm btn-secondary" type="reset">Annuler</button>
        <a class="btn btn-sm btn-primary" href="{{ path('categorie_index') }}">Liste des catégories</a>
    </div>
{{ form_end(form) }}